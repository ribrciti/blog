<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @post.created_at.strftime("%A, %b %d") %></p>
		<h1><%= @post.title %></h1>
		<hr>
	</header>

	<div id="content">					
		<%= @post.content %>
	</div>

	<hr>

	<div id="share_box">
		<p>Share the Do-list</p>
			<a href="http://msn.com" target="blank"><i class="fa fa-black-tie"></i></a>
			<a href="http://google.com" target="blank"><i class="fa fa-sticky-note"></i></a>
			<a href="http://youtube.com" target="blank"><i class="fa fa-map"></i></a>
	</div>

	<%= link_to "Edit", edit_post_path(@post) %>
	<%= link_to "Delete", post_path, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>

	<br>
	<br>

</div>